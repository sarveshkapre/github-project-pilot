    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.16.0",
    "vitest": "^4.0.18"
  }
}
